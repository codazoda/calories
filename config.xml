<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.joelryan.calories"
        versionCode="112" 
        version   = "1.12.0">

    <gap:platform name="android" />

    <name>Quick Calories</name>

    <description>
        Tracks the number of calories you've eaten today without getting in
        the way. It logs the time of day and the number of calories for each
        entry; nothing more. No time is wasted selecting food types or brands.
    </description>

    <author href="http://www.joeldare.com" email="joel@joeldare.com">
        Joel Dare
    </author>
    
    <icon src="icon/icon_120x120.png" width="120" height="120" />
    
    <!-- iOS Icons -->
    <icon src="icon/icon_57x57.png" width="57" height="57" />
    <icon src="icon/icon_72x72.png" width="72" height="72" />
    <icon src="icon/icon_76x76.png" width="76" height="76" />
    <icon src="icon/icon_120x120.png" width="120" height="120" />
    
    <!-- iPhone and iPod touch -->
    <gap:splash src="images/splash_320x480.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="images/splash_640x960.png" gap:platform="ios" width="640" height="960" />
    <gap:splash src="images/splash_640x1136.png" gap:platform="ios" width="640" height="1136" />
    
    <!-- Plugins -->
    <plugin name="cordova-plugin-inappbrowser" spec="~1.7.1" />
    <plugin name="cordova-plugin-statusbar" spec="~2.2.3" />
    
    <preference name="webviewbounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    
    <preference name="permissions" value="none" />

</widget>
